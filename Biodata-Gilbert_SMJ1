    <script>
        // Menunggu hingga seluruh konten halaman (DOM) dimuat sepenuhnya
        document.addEventListener('DOMContentLoaded', () => {
            
            // Langkah 1: Memilih elemen-elemen yang diperlukan dari HTML
            const showMessageButton = document.querySelector('#pesan-btn');
            const messageContainer = document.querySelector('#pesan-container');

            // Langkah 2: Menambahkan 'event listener' pada tombol.
            // Fungsi di dalamnya akan dijalankan setiap kali tombol diklik.
            showMessageButton.addEventListener('click', () => {
                
                // Langkah 3: Memanipulasi DOM saat tombol diklik
                // Mengisi konten teks dari wadah pesan
                messageContainer.textContent = 'Halo, saya Gilbert Emmanuel Simanjuntak, selamat datang di website saya!';
                
                // Mengubah gaya CSS untuk membuat wadah pesan terlihat
                messageContainer.style.display = 'block';
            });
        });
    </script>

